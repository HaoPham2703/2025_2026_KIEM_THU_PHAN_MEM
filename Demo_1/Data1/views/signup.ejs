<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs') %>

    <body class="bg-gradient-primary" data-alert=`${alert ? alert : '' }`>

        <div class="container mt-5">

            <!-- Outer Row -->
            <div class="row justify-content-center">

                <div class="col-xl-10 col-lg-12 col-md-9">

                    <div class="card o-hidden border-0 shadow-lg my-5">
                        <div class="card-body p-0">
                            <!-- Nested Row within Card Body -->
                            <div class="row">
                                <div class="col-lg-6 d-none d-lg-block"
                                    style="background: url(https://cdn.pixabay.com/photo/2018/05/16/15/41/computer-3406108_960_720.jpg);background-position: center; background-size: cover;">
                                </div>
                                <div class="col-lg-6">
                                    <div class="p-5">
                                        <div class="text-center">
                                            <h1 class="h4 text-gray-900 mb-4">Đăng ký Admin</h1>
                                        </div>
                                        <form class="user" id="signupForm">
                                            <div class="form-group">
                                                <input type="text" class="form-control form-control-user" id="name"
                                                    placeholder="Nhập họ tên">
                                            </div>
                                            <div class="form-group">
                                                <input type="email" class="form-control form-control-user" id="email"
                                                    placeholder="Nhập địa chỉ email">
                                            </div>
                                            <div class="form-group">
                                                <div class="input-group">
                                                    <input type="password" class="form-control form-control-user"
                                                        id="password" placeholder="Mật khẩu">
                                                    <div class="input-group-append">
                                                        <span class="input-group-text" id="togglePassword" style="cursor: pointer;">
                                                            <i class="fa fa-eye" id="passwordIcon"></i>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="input-group">
                                                    <input type="password" class="form-control form-control-user"
                                                        id="passwordConfirm" placeholder="Nhập lại mật khẩu">
                                                    <div class="input-group-append">
                                                        <span class="input-group-text" id="togglePasswordConfirm" style="cursor: pointer;">
                                                            <i class="fa fa-eye" id="passwordConfirmIcon"></i>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="custom-control custom-checkbox small">
                                                    <input type="checkbox" class="custom-control-input"
                                                        id="customCheck">
                                                    <label class="custom-control-label" for="customCheck">Tôi đồng ý với các điều khoản</label>
                                                </div>
                                            </div>
                                            <button class="btn btn-primary btn-user btn-block" id="signup" type="submit">
                                                Đăng ký Admin
                                            </button>
                                            <hr>
                                            <div class="text-center">
                                                <a class="small" href="/login">Đã có tài khoản? Đăng nhập</a>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </div>

        </div>

        <script src="/js/alerts.js"></script>
        <script src="/js/signup.js"></script>
    </body>

</html>
